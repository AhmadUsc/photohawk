<!-- describes all known measurable properties and metrics -->
<measurementsDescriptor>
	<!-- descriptions of measurable properties -->
	<!-- important: once published, the uri's and their corresponding scales 
		must not be changed -->
	<!-- important: names and descriptions may change! (do not use them as indices) -->
	<measurableProperties>
		<property>
			<category>outcome:object</category>
			<propertyId>format/correct/wellformed</propertyId>
			<name>format well-formed</name>
			<description>Tells if the format of the object is well formed</description>
			<booleanScale>
				<unit>well formed</unit>
			</booleanScale>
		</property>
		<property>
			<category>outcome:object</category>
			<propertyId>format/correct/valid</propertyId>
			<name>format valid</name>
			<description>Tells if the format of the object is valid</description>
			<booleanScale>
				<unit>valid</unit>
			</booleanScale>
		</property>
		<property>
			<category>outcome:object</category>
			<propertyId>format/correct/conforms</propertyId>
			<name>format conforms</name>
			<description>Tells if the format of the result conforms to the
				specified output format of the tool.</description>
			<booleanScale>
				<unit>conforms</unit>
			</booleanScale>
		</property>

		<property>
			<category>outcome:object</category>
			<propertyId>compression/scheme</propertyId>
			<name>compression scheme</name>
			<description>Compression scheme of the result.</description>
			<freeStringScale />
			<possibleMetrics>
				<metric metricId="equal" />
			</possibleMetrics>
		</property>
		<property>
			<category>outcome:object</category>
			<propertyId>compression/lossless</propertyId>
			<name>lossless compression </name>
			<description>Tells if lossless compression is used.</description>
			<booleanScale>
				<unit>lossless compression</unit>
			</booleanScale>
		</property>
		<property>
			<category>outcome:object</category>
			<propertyId>compression/lossy</propertyId>
			<name>lossy compression </name>
			<description>Tells if lossy compression is used.</description>
			<booleanScale>
				<unit>lossy compression</unit>
			</booleanScale>
		</property>
		<property>
			<category>outcome:object</category>
			<propertyId>image/dimension/width</propertyId>
			<name>image width</name>
			<description>Width of an image. Corresponds to the x-axis.</description>
			<positiveIntegerScale>
				<unit>pixel</unit>
			</positiveIntegerScale>
			<possibleMetrics>
				<metric metricId="equal" />
			</possibleMetrics>
		</property>
		<property>
			<category>outcome:object</category>
			<propertyId>image/dimension/height</propertyId>
			<name>image height</name>
			<description>Height of an image. Corresponds to the y-axis.</description>
			<positiveIntegerScale>
				<unit>pixel</unit>
			</positiveIntegerScale>
			<possibleMetrics>
				<metric metricId="equal" />
			</possibleMetrics>
		</property>
		<property>
			<category>outcome:object</category>
			<propertyId>image/dimension/aspectRatio</propertyId>
			<name>aspect ratio</name>
			<description>aspect ratio of image, calculated as height/width.</description>
			<positiveFloatScale>
				<unit>aspect ratio(h/w)</unit>
			</positiveFloatScale>
			<possibleMetrics>
				<metric metricId="equal" />
			</possibleMetrics>
		</property>
		<property>
			<category>outcome:object</category>
			<propertyId>image/colorEncoding/bitsPerSample</propertyId>
			<name>bits per sample</name>
			<description>Number of bits per sample component, e.g. "8 8 8", one
				byte for each r,g,b value</description>
			<!-- at the moment bitsPerSample is only available as derived measurement, 
				therefore no information about scale and unit is available -->
			<possibleMetrics>
				<metric metricId="equal" />
			</possibleMetrics>
		</property>
		<property>
			<category>outcome:object</category>
			<propertyId>image/colorEncoding/samplesPerPixel</propertyId>
			<name>samples per pixel</name>
			<description>number of samples per pixel. corresponds to bits per
				sample representation.</description>
			<!-- at the moment samplesPerPixel is only available as derived measurement, 
				therefore no information about scale and unit is available -->
			<possibleMetrics>
				<metric metricId="equal" />
			</possibleMetrics>
		</property>
		<property>
			<category>outcome:object</category>
			<propertyId>image/photometricInterpretation/colorSpace</propertyId>
			<name>color space</name>
			<description>color space name</description>
			<!-- at the moment colorSpace is only available as derived measurement, 
				therefore no information about scale and unit is available -->
			<possibleMetrics>
				<metric metricId="equal" />
			</possibleMetrics>
		</property>
		<property>
			<category>outcome:object</category>
			<propertyId>image/photometricInterpretation/colorProfile/iccProfile</propertyId>
			<name>icc color profile</name>
			<description></description>
			<!-- at the moment this is only available as derived measurement, therefore 
				no information about scale and unit is available -->
			<possibleMetrics>
				<metric metricId="equal" />
			</possibleMetrics>
		</property>
		<property>
			<category>outcome:object</category>
			<propertyId>image/spatialMetrics/samplingFrequencyUnit</propertyId>
			<name>sampling frequency unit</name>
			<description>The unit of measurement for XSamplingFrequency and
				YSamplingFrequency. (See ANSI/NISO Z39.87-2006, "Data Dictionary –
				Technical Metadata for Digital Still Images")</description>
			<!-- at the moment this is only available as derived measurement, therefore 
				no information about scale and unit is available -->
			<possibleMetrics>
				<metric metricId="equal" />
			</possibleMetrics>

		</property>
		<property>
			<category>outcome:object</category>
			<propertyId>image/spatialMetrics/xSamplingFrequency</propertyId>
			<name>x sampling frequency</name>
			<description>Data element that specifies the number of pixels per
				Definition samplingFrequencyUnit in the image width. (See ANSI/NISO
				Z39.87-2006, "Data Dictionary – Technical Metadata for Digital Still
				Images")</description>
			<!-- at the moment this is only available as derived measurement, therefore 
				no information about scale and unit is available -->
			<possibleMetrics>
				<metric metricId="equal" />
			</possibleMetrics>
		</property>
		<property>
			<category>outcome:object</category>
			<propertyId>image/spatialMetrics/ySamplingFrequency</propertyId>
			<name>y sampling frequency</name>
			<description>Data element that specifies the number of pixels per
				Definition samplingFrequencyUnit in the image height. (See ANSI/NISO
				Z39.87-2006, "Data Dictionary – Technical Metadata for Digital Still
				Images")</description>
			<!-- at the moment this is only available as derived measurement, therefore 
				no information about scale and unit is available -->
			<possibleMetrics>
				<metric metricId="equal" />
			</possibleMetrics>
		</property>


		<property>
			<category>outcome:object</category>
			<propertyId>image/metadata</propertyId>
			<name>image metadata</name>
			<description>additional metadata stored in images (EXIF, ...)</description>
			<!-- at the moment this is only available as derived measurement, therefore 
				no information about scale and unit is available -->
			<possibleMetrics>
				<metric metricId="preserved" />
			</possibleMetrics>
		</property>
		<property>
			<category>outcome:object</category>
			<propertyId>image/metadata/software</propertyId>
			<name>image metadata: software</name>
			<description>textual information about software used to create this
				object</description>
			<!-- at the moment this is only available as derived measurement, therefore 
				no information about scale and unit is available -->
			<possibleMetrics>
				<metric metricId="equal" />
			</possibleMetrics>
		</property>
		<property>
			<category>outcome:object</category>
			<propertyId>image/metadata/producer</propertyId>
			<name>image metadata: producer</name>
			<description>textual information about producer</description>
			<!-- at the moment this is only available as derived measurement, therefore 
				no information about scale and unit is available -->
			<possibleMetrics>
				<metric metricId="equal" />
			</possibleMetrics>
		</property>
		<property>
			<category>outcome:object</category>
			<propertyId>image/metadata/creationDate</propertyId>
			<name>image metadata: creationDate</name>
			<description>creation date</description>
			<!-- at the moment this is only available as derived measurement, therefore 
				no information about scale and unit is available -->
			<possibleMetrics>
				<metric metricId="equal" />
			</possibleMetrics>
		</property>
		<property>
			<category>outcome:object</category>
			<propertyId>image/metadata/lastModified</propertyId>
			<name>image metadata: lastModified</name>
			<description>last modified at</description>
			<!-- at the moment this is only available as derived measurement, therefore 
				no information about scale and unit is available -->
			<possibleMetrics>
				<metric metricId="equal" />
			</possibleMetrics>
		</property>

		<property>
			<category>outcome:object</category>
			<propertyId>image/metadata/description</propertyId>
			<name>image metadata: description</name>
			<description>textual description of the object</description>
			<!-- at the moment this is only available as derived measurement, therefore 
				no information about scale and unit is available -->
			<possibleMetrics>
				<metric metricId="equal" />
			</possibleMetrics>
		</property>

		<property>
			<category>outcome:object</category>
			<propertyId>image/metadata/orientation</propertyId>
			<name>image metadata: orientation</name>
			<description>orientation of the object</description>
			<!-- at the moment this is only available as derived measurement, therefore 
				no information about scale and unit is available -->
			<possibleMetrics>
				<metric metricId="equal" />
			</possibleMetrics>
		</property>

		<property>
			<category>outcome:object</category>
			<propertyId>relativeFileSize</propertyId>
			<name>relative file size</name>
			<description>relative file size, calculated as: (size of source /
				size of result)
			</description>
			<positiveFloatScale>
				<unit>ratio</unit>
			</positiveFloatScale>
		</property>

	</measurableProperties>
	<metrics>
		<metric>
			<metricId>equal</metricId>
			<name>equal</name>
			<description>Simple comparison of two values (A, B) of any type on
				equality.</description>
			<booleanScale>
				<unit>equality</unit>
			</booleanScale>
		</metric>
		<metric>
			<metricId>preserved</metricId>
			<name>preserved</name>
			<description>Indicator if all values in source measurement do exist
				in result measurement</description>
			<booleanScale>
				<unit>preserved</unit>
			</booleanScale>
		</metric>

	</metrics>
</measurementsDescriptor>